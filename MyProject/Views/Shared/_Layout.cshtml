@using MyEvernote.Entities

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>My EverNote</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/Content/shop-homepage.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</head>

<body>
    @{ 
        EvernoteUser user = null;

        if(Session["login"] != null)
        {
            user = Session["login"] as EvernoteUser;
        }
    }

    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Home/Login">My Evernote</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    @if(user != null)
                    {
                            <li class="dropdown">
                                <a href="#"  class="dropdown-toggle" data-toggle="dropdown" role="button" 
                                   aria-haspopup="true" aria-expanded="false">
                                    <span class="glyphicon glyphicon-wrench"></span>Yönetim <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a href="/Note/AddNew">
                                            <span class="glyphicon glyphicon-plus"></span> Not Ekle
                                        </a>
                                    </li>
                                    <li role="separator" class="divider"></li>
                                    <li>
                                        <a href="/Note/MyNotes">
                                            <span class="glyphicon glyphicon-th-list"></span> Notlarım
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/Note/MyLikedNotes">
                                            <span class="glyphicon glyphicon-heart"></span> Beğendiklerim
                                        </a>
                                    </li>
                                    @if (user.IsAdmin) { 
                                        <li role="separator" class="divider"></li>
                                    <li>
                                        <a href="/Category/AddNew">
                                            <span class="glyphicon glyphicon-plus"></span> Kategori Ekle
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/Category/List">
                                            <span class="glyphicon glyphicon-th-list"></span> Kategoriler
                                        </a>
                                    </li>
                                    }
                                </ul>

                            </li>

                    }
                    
                    <li>
                        <a href="/Home/MostLiked">
                            <span class="glyphicon glyphicon-heart-empty"></span> En Beğenilenler
                        </a>
                    </li>
                    <li>
                        <a href="/Home/Index">
                            <span class="glyphicon glyphicon-th-list"></span> Son Yazılanlar
                        </a>
                    </li>
                    <li>
                        <a href="/Home/About">
                            <span class="glyphicon glyphicon-info-sign"></span> Hakkımda
                        </a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (user == null)
                    {
                                <li>
                                     <a href="/Home/Login">
                                        <span class="glyphicon glyphicon-log-in"></span> Giriş
                                     </a>
                                </li>
                                <li>
                                    <a href="/Home/Register">
                                        <span class="glyphicon glyphicon-user"></span>+ Üye ol
                                    </a>
                                </li>
                    }
                    else { 
                 
                    <li class="dropdown">
                        <a href="/Home/ShowProfile" class="dropdown-toggle" data-toggle="dropdown" role="button"
                           aria-haspopup="true" aria-expanded="false">
                            <span class="glyphicon glyphicon-wrench"></span> @user.Username <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="/Home/ShowProfile">
                                    <span class="glyphicon glyphicon-user"></span> Profili Göster
                                </a>
                            </li>
                            <li class="divider" role="separator"></li>
                            <li>
                                <a href="/Home/EditProfile">
                                    <span class="glyphicon glyphicon-user"></span> Profili Düzenle
                                </a>
                            </li>
                            <li class="divider" role="separator"></li>
                            <li>
                                <a href="/Home/DeleteProfile">
                                    <span class="glyphicon glyphicon-user"></span> Profili Sil
                                </a>
                            </li>
                        </ul>



                        </li>

<li>
                        <a href="/Home/Logout">
                            <span class="glyphicon glyphicon-log-out"></span> Çıkış
                        </a>
                    </li>
                    }

                    
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>


    @RenderBody()

    <!-- /.container -->
    <div class="container">

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-4 text-center">
                    <p>
                        <h4>Site Haritası</h4><hr />
                        <a href="/Home/MostLiked">
                            <span class="glyphicon glyphicon-heart-empty"></span> En Beğenilenler
                        </a><br />
                        <a href="/Home/Index">
                            <span class="glyphicon glyphicon-th-list"></span> Son Yazılanlar
                        </a><br />
                        <a href="/Home/About">
                            <span class="glyphicon glyphicon-info-sign"></span> Hakkımda
                        </a>
                    </p>
                </div>
                <div class="col-lg-4 text-center">
                    <h4>MyEvernote</h4><hr />
                    <p>Tüm Hakları Saklıdır &copy; MyEvernote (EmreErmin) @DateTime.Now.Year</p>
                </div>
                <div class="col-lg-4 text-center">
                    <h4>E-Bülten Üyeliği</h4><hr />
                    <p>Aşağıya mail adresinizi girerek abone olabilirsiniz</p>
                    <div class="col-md-10 col-md-offset-1">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="E-posta adresinizi giriniz" />
                            <span class="input-group-btn">
                                <button class="btn btn-primary">
                                    <span class="glyphicon glyphicon-send"></span> Gönder
                                </button>
                            </span>
                        </div>
                    </div>

                </div>
            </div>
        </footer>

    </div>
    <!-- /.container -->
</body>

</html>
