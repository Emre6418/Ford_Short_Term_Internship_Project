@using MyEvernote.Entities.ValueObjects
@model LoginViewModel
@{
    ViewBag.Title = "My Evernote Giriş Sayfası";
}

<link href="~/Content/login-register.css" rel="stylesheet" />
<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.7.0.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

@using (Html.BeginForm())
{
    <div class="container">
        <div class="card card-container">
            <h2 class="text-center">Giriş Formu</h2>
            <hr />
            <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
            <img id="profile-img" class="profile-img-card center-block" src="~/Content/1.png" />
            <p id="profile-name" class="profile-name-card"></p>
            <form class="form-signin">

                @Html.ValidationSummary(false)

                @if(ViewBag.SetLink != null)
                    {
                     <a href="@ViewBag.SetLink" class="btn btn-primary">Activate</a>
                    }
                <br />

                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı adınız" })
                <br />
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifreniz", type = "password" })
                <br />
                <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Giriş</button>
            </form><!-- /form -->

            <a href="#" class="forgot-password">
                Forgot the password?
            </a>
        </div><!-- /card-container -->
    </div>
}


<script>
    $(function () {
        $("footer").parent().hide(); //footer gizleme
    });
</script>
